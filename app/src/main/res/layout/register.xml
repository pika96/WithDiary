<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/White"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/goyang"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/babyPurple"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="7">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="7">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/goyang"
                    android:gravity="center"
                    android:text="☆"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/register_id_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="6"
                    android:background="?attr/editTextBackground"
                    android:backgroundTint="@color/babyPink"
                    android:ems="7"
                    android:fontFamily="@font/goyang"
                    android:hint="E-mail (ID)"
                    android:inputType="textEmailAddress"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="7">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/goyang"
                    android:gravity="center"
                    android:text="☆"
                    android:textSize="36sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/register_password_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="6"
                    android:background="?attr/editTextBackground"
                    android:backgroundTint="@color/babyPink"
                    android:ems="7"
                    android:stateListAnimator="@null"
                    android:fontFamily="@font/goyang"
                    android:hint="Password (least 6 digits)"
                    android:inputType="textPersonName"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="7">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/goyang"
                    android:gravity="center|top"
                    android:text="☆"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/register_password2_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="6"
                    android:background="?attr/editTextBackground"
                    android:backgroundTint="@color/babyPink"
                    android:ems="7"
                    android:fontFamily="@font/goyang"
                    android:hint="Verify Password"
                    android:inputType="textPersonName"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:weightSum="0">

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/fui_transparent"
                    android:fontFamily="@font/goyang"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textColor="@color/crop__button_text"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="265dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>